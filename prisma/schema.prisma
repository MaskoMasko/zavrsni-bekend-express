generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Student {
    id            Int      @id @default(autoincrement())
    jmbag         String   @unique
    firstName     String
    lastName      String
    email         String   @unique
    passwordHash  String
    enrolledYear  Int
    repeatingYear Boolean  @default(false)
    module        String?
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}

model Course {
    id             Int      @id @default(autoincrement())
    name           String   @unique
    holder         String
    description    String
    ects           Int
    semester       Int // 1-6
    year           Int // 1-3 (npr. 1-2 sem = 1. godina, 3-4 = 2. godina, 5-6 = 3. godina)
    prerequisite   Course?  @relation("CoursePrerequisite", fields: [prerequisiteId], references: [id])
    prerequisiteId Int?
    dependents     Course[] @relation("CoursePrerequisite")
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
}
